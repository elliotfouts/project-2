<div class="container">
    <form class="pure-form pure-form-aligned" action="/register" method="POST">
            <div class="pure-control-group">
                <input name="email" id="email" type="text" placeholder="Email Address" value="{{email}}">
            </div>

            <div class="pure-control-group">
                <input name="password" id="password" type="password" placeholder="Password">
            </div>
            <div class="pure-control-group">
                <input name="password2" id="password2" type="password" placeholder="Confirm Password">
            </div>

            <div class="pure-controls">
                <button type="submit" class="pure-button pure-button-primary">Create Account</button>
            </div>
    </form>
</div>

<div class="register-alert-container">
{{#if errors}}
    {{#each errors}}
        <p class="register-alert">{{message}}</p>
    {{/each}}
{{/if}}
</div>

<style>
    .register-alert-container {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .register-alert {
        background: rgb(255, 186, 186);
        color: rgb(170, 46, 46);
        padding: 1rem;
        width: 50%;
        text-align: center;
        margin-bottom: 1rem;
    }
    .container {
        display: flex;
        justify-content: center;
        padding: 5rem;
    }
    form {
        width: 50%;
    }
    form input {
        width: 100%;
    }
    .pure-form-aligned .pure-controls {
        padding: 0;
        margin: 0;
        display: flex;
        justify-content: center;
    }
</style>